<div class="container">
  <div class="m-4">
    <h1 class="m-3 fw-bolder">To Do List:</h1>

    <ul class="m-3 mt-5 ">
      <% @task.each do |task| %>
        <li class="m-3 ">
          <%= link_to do%>
          <i class="fa-regular fa-square"></i>
          <% end %>
          <%= link_to task.title, task_path(task) %>
          <%= link_to "🗑️",
            task_path(task),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </li>
      <% end %>
    </ul>

  <div class="m-3 mt-5">
  <i class="fa-solid fa-file-circle-plus"></i>
  <%= link_to  " Add a task", new_path %>
  </div>
</div>
